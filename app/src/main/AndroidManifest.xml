<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pm.jetpackcomposecomponent">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetpackComposeComponent">
        <activity
            android:name=".ScaffoldActivity"
            android:exported="true"
            android:label="@string/title_activity_scaffold"
            android:theme="@style/Theme.JetpackComposeComponent.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".feature.ListComposeActivity"
            android:exported="true"
            android:label="@string/title_activity_list_compose"
            android:theme="@style/Theme.JetpackComposeComponent.NoActionBar" />
        <activity
            android:name=".feature.TextFieldButtonComponent"
            android:exported="true"
            android:label="@string/title_activity_textfield_button_component"
            android:theme="@style/Theme.JetpackComposeComponent.NoActionBar" />
        <activity
            android:name=".feature.StateComposeActivity"
            android:exported="true"
            android:label="@string/title_activity_state_compose"
            android:theme="@style/Theme.JetpackComposeComponent.NoActionBar" />
        <activity
            android:name=".feature.StyleActivity"
            android:exported="true"
            android:label="@string/title_activity_style"
            android:theme="@style/Theme.JetpackComposeComponent.NoActionBar" />
        <activity
            android:name=".feature.ImageCardActivity"
            android:exported="true"
            android:label="@string/title_activity_image_card"
            android:theme="@style/Theme.JetpackComposeComponent.NoActionBar" />
        <activity
            android:name=".feature.ModifiersActivity"
            android:exported="true"
            android:label="@string/title_activity_modifiers"
            android:theme="@style/Theme.JetpackComposeComponent.NoActionBar" />
        <activity
            android:name=".feature.ColumnRowActivity"
            android:exported="true"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.JetpackComposeComponent.NoActionBar" />
    </application>

</manifest>